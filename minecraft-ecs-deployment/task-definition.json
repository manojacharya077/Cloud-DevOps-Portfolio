{
    "family": "minecraft-task",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "name": "minecraft-server",
            "image": "548484840290.dkr.ecr.us-east-2.amazonaws.com/visitor-counter-app:latest",
            "cpu": 1024,
            "memory": 2048,
            "portMappings": [
                {
                    "containerPort": 25565,
                    "hostPort": 25565,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {"name": "EULA", "value": "TRUE"}
            ]
        }
    ],
    "requiresCompatibilities": ["EC2"]
}